---
interface Props {
  url?: string
  img?: string
  alt?: string
  title?: string
  footer: string
}

// Set up default props
const { url = '#', img = '', alt = 'image', title = 'Default title', footer = 'author' } = Astro.props
---

<div class="card">
  <div class="card__image">
    <img src={img} alt={alt} />
  </div>
  <div class="card__content">
    <h3>
      <a href={url} target="_blank">{title}</a>
    </h3>
    {Astro.slots.default}
    <small>
      {footer}
    </small>
  </div>
</div>

<style is:global>
  
  .card {
    display: flex;
    flex-direction: column;
    border: 3px solid rgb(185, 29, 97);
    border-radius: 0.5rem;
    position: relative;
    overflow: hidden;
    transition: box-shadow 0.15s ease-in-out;
  }
  #default-display .card:hover {
    cursor: default; /* 设置为默认的箭头指针 */
  }

  .card:hover,
  .card:focus-within {
    box-shadow: 0 0 0 0.3rem;
  }

  .card:focus-within a:focus {
    text-decoration: none;
    box-shadow: none;
    outline: none;
  }

  .card__image {
    height: 16rem;
  }

  .card__image img {
    height: 100%;
    width: 100%;
    object-fit: cover;
  }

  .card__content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    padding: 1rem;
  }

  .card__content a {
    text-decoration: none;
  }

  .card__content a:focus {
    text-decoration: underline;
  }

  .card__content a::after {
    content: '';
    position: absolute;
    inset: 0;
  }

  .card__content:last-child {
    margin-top: auto;
    padding-top: 2rem;
  }


  #default-display .card__image {
      height: 10rem; 
  }
  #default-display .card__content {
      padding: 0.5rem;  
      padding-top: 1rem;  
  }




</style>
