---
import { Icon } from "astro-icon";
interface Props {
	href: string;
	label: string;
	type?: "primary" | "primary2" | "secondary" | "discord" | "github";
	iconLeft?: string;
	iconRight?: string;
	center?: boolean;
}

const { href, label, type = "secondary", iconLeft, iconRight, center } = Astro.props;
---

<a
	{href}
	class:list={[
		"px-6 py-2 font-semibold border-2 rounded-md no-underline text-base transition-colors inline-flex items-center gap-2 whitespace-nowrap",
		{
			"border-primary-300 bg-primary-500 text-white hover:border-primary-200":
				type === "primary",
			"border-stone-300 bg-white text-stone-900 hover:border-primary-500":
				type === "primary2",
			"border-stone-600 text-primary-400 hover:border-primary-300":
				type === "secondary",
			"border-white border-opacity-30 bg-blurple text-white hover:border-opacity-80":
				type === "discord",
			"border-stone-800 bg-stone-950 text-white hover:border-stone-500":
				type === "github",
			"text-center justify-center": center,
		},
	]}
>
	{iconLeft && <Icon name={iconLeft} class="w-5 h-5" />}
	{label}
	{iconRight && <Icon name={iconRight} class="w-5 h-5" />}
</a>
